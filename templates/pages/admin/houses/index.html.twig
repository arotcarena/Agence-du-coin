{% extends 'base.html.twig' %}


{% block title %}Administration des biens : listing{% endblock %}

{% block body %}

            



    <div class="container">
        <h1>GÃ©rer les biens</h1>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for house in houses %}
                    <tr>
                        <td>{{ house.title }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('admin_houses_edit', {'id': house.id}) }}">Editer</a>
                            <form action="{{ path('admin_houses_delete', {'id':house.id}) }}" style="display: inline-block" method="post" onsubmit="return confirm('Supprimer le bien ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ house.id) }}">
                                <button type="submit" class="btn btn-secondary">Supprimer</button>
                            </form>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="">
            <a href="{{ path('admin_houses_new') }}" class="btn btn-primary">+ Ajouter</a>
        </div>
    </div>
{% endblock %}