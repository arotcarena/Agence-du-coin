{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    

<div class="container">
    <h1>Connexion</h1>

    {# messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} container">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {# erreurs de connexion #}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form">
        <div class="form-group">
            Nom d'utilisateur :
            <input type="text" name="_username" value="{{ last_username }}" class="form-control">
        </div>
        <div class="form-group">
            Mot de passe :
            <input type="password" name="_password" class="form-control">
        </div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
        <button type="submit" class="btn btn-primary">Valider</button>
    </form>

    <div>
        <a href="{{ path('registration') }}">Pas encore inscrit? Cliquez ici pour ouvrir un compte</a>
    </div>

</div>

{% endblock %}
